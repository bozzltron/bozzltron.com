<% if (post.link){ %>
  <h1 class="post-title"><a class="<%= class_name %>" href="<%- url_for(post.path) %>" target="_blank" itemprop="url"><%= post.title %></a></h1>
<% } else if (post.title){ %>
  <% if (index){ %>
    <h1 class="post-title"><a class="<%= class_name %>" href="<%- url_for(post.path) %>" target="_blank" itemprop="url"><%= post.title %></a></h1>
  <% } else { %>
    <h1 class="post-title"><%= post.title %></h1>
  <% } %>
<% } %>